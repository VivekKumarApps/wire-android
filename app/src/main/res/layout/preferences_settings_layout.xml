<merge xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <com.waz.zclient.pages.main.profile.preferences.views.TextButton
                android:id="@+id/settings_account"
                android:layout_width="match_parent"
                android:layout_height="@dimen/preference_button_height"
                app:iconStart="@string/glyph__addressbook"
                app:title="@string/pref_account_screen_title"/>

            <!-- TODO set correct glyph icon-->
            <!-- TODO set correct glyph icon-->
            <com.waz.zclient.pages.main.profile.preferences.views.TextButton
                android:id="@+id/settings_team"
                android:layout_width="match_parent"
                android:layout_height="@dimen/preference_button_height"
                app:iconStart="@string/glyph__add_team"
                app:title="@string/pref_manage_team_title"/>
            <!-- TODO set correct glyph icon-->
            <!-- TODO set correct glyph icon-->

            <com.waz.zclient.pages.main.profile.preferences.views.TextButton
                android:id="@+id/settings_devices"
                android:layout_width="match_parent"
                android:layout_height="@dimen/preference_button_height"
                app:iconStart="@string/glyph__devices"
                app:title="@string/pref_devices_screen_title"/>

            <com.waz.zclient.pages.main.profile.preferences.views.TextButton
                android:id="@+id/settings_options"
                android:layout_width="match_parent"
                android:layout_height="@dimen/preference_button_height"
                app:iconStart="@string/glyph__settings"
                app:title="@string/pref_options_screen_title"/>

            <com.waz.zclient.pages.main.profile.preferences.views.TextButton
                android:id="@+id/settings_advanced"
                android:layout_width="match_parent"
                android:layout_height="@dimen/preference_button_height"
                app:iconStart="@string/glyph__tools"
                app:title="@string/pref_advanced_screen_title"/>

            <com.waz.zclient.pages.main.profile.preferences.views.TextButton
                android:id="@+id/settings_support"
                android:layout_width="match_parent"
                android:layout_height="@dimen/preference_button_height"
                app:iconStart="@string/glyph__info"
                app:title="@string/pref_support_screen_title"/>

            <com.waz.zclient.pages.main.profile.preferences.views.TextButton
                android:id="@+id/settings_about"
                android:layout_width="match_parent"
                android:layout_height="@dimen/preference_button_height"
                app:iconStart="@string/glyph__wire"
                app:title="@string/pref_about_screen_title"/>

            <com.waz.zclient.pages.main.profile.preferences.views.TextButton
                android:id="@+id/settings_dev"
                android:layout_width="match_parent"
                android:layout_height="@dimen/preference_button_height"
                app:iconStart="@string/glyph__filter_robot"
                app:title="@string/pref_developer_screen_title"/>

            <com.waz.zclient.pages.main.profile.preferences.views.TextButton
                android:id="@+id/settings_avs"
                android:layout_width="match_parent"
                android:layout_height="@dimen/preference_button_height"
                app:iconStart="@string/glyph__speaker_loud"
                app:title="@string/pref_dev_avs_screen_title"/>

        </LinearLayout>

    </ScrollView>

    <com.waz.zclient.views.FlatWireButton
        android:id="@+id/profile_invite"
        android:layout_width="match_parent"
        android:layout_height="@dimen/flat_wire_button_height"
        />

</merge>
